# ============================================
# RelayOS Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Client provides most of these credentials

# ============================================
# DATABASE (Required - Client Provides)
# ============================================
# Option 1: Supabase (recommended for managed hosting)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Option 2: Direct PostgreSQL (for self-hosted or other providers)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# LLM PROVIDER (Required - Client Provides)
# ============================================
# Supported: openai | anthropic | google
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# Anthropic (Claude)
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google (Gemini)
# GOOGLE_API_KEY=...
# GOOGLE_MODEL=gemini-1.5-pro

# ============================================
# N8N INTEGRATION (Optional)
# ============================================
# Set to true to enable n8n workflow integration
N8N_ENABLED=false

# Client's n8n webhook base URL (if they have their own n8n)
# N8N_WEBHOOK_BASE_URL=https://your-n8n.example.com/webhook

# API key if client's n8n requires authentication
# N8N_API_KEY=

# ============================================
# APPLICATION SETTINGS
# ============================================
# API Configuration
API_PORT=3001
API_URL=http://localhost:3001

# Admin Dashboard
NEXT_PUBLIC_API_URL=http://localhost:3001

# Widget
WIDGET_API_URL=http://localhost:3001

# ============================================
# SELF-HOSTED FULL STACK (docker-compose.full.yml only)
# ============================================
# Only needed if using docker-compose.full.yml for fully self-hosted setup

# App Database (bundled PostgreSQL)
# POSTGRES_USER=relayos
# POSTGRES_PASSWORD=change_this_password
# POSTGRES_DB=relayos

# n8n Configuration
# N8N_HOST=localhost
# N8N_PROTOCOL=http
# N8N_WEBHOOK_URL=http://localhost:5678
# N8N_USER=admin
# N8N_PASSWORD=change_this_password

# n8n Database
# N8N_POSTGRES_USER=n8n
# N8N_POSTGRES_PASSWORD=change_this_password
# N8N_POSTGRES_DB=n8n
